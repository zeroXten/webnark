<%= form_for @report_choice, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :report_item_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :report_item_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bonus, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :bonus, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :points, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :points, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :help, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :help, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                report_choices_path, :class => 'btn' %>
  </div>
<% end %>
