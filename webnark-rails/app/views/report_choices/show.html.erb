<%- model_class = ReportChoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:report_item_id) %>:</strong></dt>
  <dd><%= @report_choice.report_item_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @report_choice.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bonus) %>:</strong></dt>
  <dd><%= @report_choice.bonus %></dd>
  <dt><strong><%= model_class.human_attribute_name(:points) %>:</strong></dt>
  <dd><%= @report_choice.points %></dd>
  <dt><strong><%= model_class.human_attribute_name(:help) %>:</strong></dt>
  <dd><%= @report_choice.help %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              report_choices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_report_choice_path(@report_choice), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              report_choice_path(@report_choice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
