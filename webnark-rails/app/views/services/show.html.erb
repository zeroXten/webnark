<%- model_class = Service -%>
<%= render 'shared/search' %>

<h1>Security report for <%= link_to @service.name, @service.url %></h1>
<p class="muted">Last updated <%= @service.updated_at %> by zeroXten | <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_service_path(@service) %> <%= link_to t('.destroy', :default => t("helpers.links.destroy")), service_path(@service), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>

<div class="row">
<div class="span9">
  <%= render 'header' %>
  <% if @full_report %>
    <%= render 'full_report' %>
  <% else %>
    <%= render 'summary_report' %>
  <% end %>

  <h2>Comments</h2>
  <%= form_tag "/services/add_comment" do %>
    <%= hidden_field_tag "id", @service.id %>
    <%= text_field_tag "comment[title]" %><br/>
    <%= text_area_tag "comment[comment]" %><br/>
    <%= submit_tag "Add comment" %>
  <% end %>
  <hr/>
  <% @comments.each do |comment| %>
    <blockquote><strong><%= comment.title %></strong><br/>
      <%= comment.comment %><br/>
      <span class="muted">By <%= comment.user.username %> at <%= comment.updated_at %></span> - <%= link_to "report", :controller => 'comments', :action => 'report', :id => comment.id, :data => { :confirm => 'Report this comment?' } %>
    </blockquote>
  <% end %>
  <%= paginate @comments %>
</div>
<div class="span3">
  <%= render 'score' %>
  <%= link_to "report this service", :report_service, :data => { :confirm => 'Report this service?' } %>
  <%= render 'shared/community_link'  %>
</div>
</div>
